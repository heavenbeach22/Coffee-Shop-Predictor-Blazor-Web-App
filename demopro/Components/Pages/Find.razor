@page "/find"
@using demopro.Models
@using demopro.Services
@inject IJSRuntime JS
@inject FindNearByCafe FindService
@inject DataManager DataManager
@inject IConfiguration Config
@attribute [StreamRendering]
@inject IHttpClientFactory ClientFactory
@using System.Text.Json
@using System.Text.Json.Serialization
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject UserState UserState

<PageTitle>Find</PageTitle>

<div class="find-background">
    <h1 class="text-3xl font-bold mb-4 text-center">☕Find Nearby </h1>

    <div class="search-bar">
        <input type="number" @bind="UserLat" step="any" placeholder="Latitude" class="input-style" />
        <input type="number" @bind="UserLng" step="any" placeholder="Longitude" class="input-style" />
        <button type="button" class="btn-filter" @onclick="SearchNearby">Find Cafes</button>
    </div>

    @if (IsLoading)
    {
        <p>Searching nearby cafés...</p>
    }
    else if (HasSearched && NearbyShops?.Any() == true)
    {
        <div class="coffee-list">
            @foreach (var shop in NearbyShops)
            {
                 <div class="coffee-card">
                    <h2 class="text-lg font-semibold">@shop.Name</h2>
                    <p class="text-sm text-gray-600">Lat: @shop.Latitude, Lng: @shop.Longitude</p>
                    <p class="text-yellow-500">⭐ @shop.Rating</p>
                    <p class="text-green-700">📍 @shop.DistanceFromUser km</p>
                    <p class="text-green-600 font-medium">Visits: @shop.VisitCount</p>
                    <button class="btn-filter mt-2" @onclick="() => MarkAsVisited(shop)">
                     Mark as Visited
                    </button>
                 </div>
            }
        </div>
    }
    else if (HasSearched)
    {
      <p class="text-gray-500 text-center mt-4">No nearby coffee shops found. Try searching a location?</p>
    }


</div>

@code {
    private double UserLat { get; set; } = 0;
    private double UserLng { get; set; } = 0;
    private List<CoffeeShop> NearbyShops { get; set; } = new();
    private bool IsLoading { get; set; } = false;
    private bool HasSearched { get; set; } = false;

    private async Task SearchNearby()
    {
        Console.WriteLine($"SearchNearby triggered: Lat = {UserLat}, Lng = {UserLng}");

        if (UserLat == 0 || UserLng == 0)
        {
            Console.WriteLine("Coordinates not provided.");
            return;
        }

        IsLoading = true;
        HasSearched = true;
        try
        {
            var cafes = await FindService.GetNearbyCoffeeShops(UserLat, UserLng, 5.0);

            Console.WriteLine($"NearbyShops count: {cafes.Count}");
            foreach (var cafe in cafes)
            {
                Console.WriteLine($"Found: {cafe.Name} at {cafe.Latitude}, {cafe.Longitude} ⭐{cafe.Rating}");
            }

            NearbyShops = cafes;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SearchNearby error: {ex.Message}");
        }

        IsLoading = false;
    }

    private async Task MarkAsVisited(CoffeeShop shop)
{
    try
    {
        // Update both history.json and fullhistory.json
        int count = await DataManager.MarkCoffeeShopVisitedAsync(shop.Name);

        // Update the in-memory object
        shop.VisitCount = count;

        Console.WriteLine($"Marked '{shop.Name}' as visited. Total visits: {count}");
    }
    catch (Exception ex)
    {
        Console.WriteLine($"Visit marking error: {ex.Message}");
    }
}


    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (!UserState.IsLoggedIn)
            {
              await Task.Yield();
              Nav.NavigateTo("/");
              return;
            }
             Console.WriteLine("Loading cafes using DataManager...");
            NearbyShops = await DataManager.LoadCafesAsync();
            Console.WriteLine($"Loaded {NearbyShops.Count} coffee shops.");

        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading JSON: {ex.Message}");

        }
        
    }
}

